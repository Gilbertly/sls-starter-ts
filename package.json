{
  "name": "starter-ts",
  "version": "1.0.0",
  "description": "Essential aws-typescript sample project.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:test": "npm run lint:fix && jest",
    "layer:prepare": "rimraf -f ./nodejs && npm run layer:install",
    "layer:install": "mkdir -p ./nodejs && cp package.json ./nodejs && cd ./nodejs && npm i --only=prod",
    "clean:build": "rimraf -f build && npm run build && npm run layer:prepare",
    "validate:sls": "sls deploy --stage dev --noDeploy",
    "validate:all": "npm run lint:test && npm run clean:build",
    "deploy:feat": "npm run validate:all && sls deploy",
    "deploy:dev": "npm run validate:all && sls deploy --stage dev",
    "deploy:prod": "npm run validate:all && sls deploy --stage prod",
    "remove:feat": "sls remove"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/sls-starter-ts"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.2",
    "@sentry/cli": "^1.64.1",
    "@types/aws-lambda": "^8.10.76",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "codecov": "^3.8.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "serverless": "^2.40.0",
    "serverless-iam-roles-per-function": "^3.1.0",
    "serverless-webpack": "^5.4.2",
    "ts-jest": "^26.5.6",
    "ts-loader": "^9.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.36.2",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@sentry/node": "^6.3.5",
    "aws-sdk": "^2.919.0"
  }
}
