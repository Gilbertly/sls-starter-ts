{
  "name": "starter-ts",
  "version": "1.0.0",
  "description": "Essential aws-typescript sample project.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:test": "npm run lint:fix && jest",
    "layer:extensions": "cd ./src/ssm-cache && chmod +x ./build.sh && ./build.sh",
    "clean:build": "rimraf -f build && npm run build && npm run layer:extensions",
    "validate:sls": "sls deploy --stage dev --noDeploy",
    "validate:all": "npm run lint:test && npm run clean:build",
    "deploy:feat": "npm run validate:all && sls deploy",
    "deploy:dev": "npm run validate:all && sls deploy --stage dev",
    "deploy:prod": "npm run validate:all && sls deploy --stage prod",
    "remove:feat": "sls remove"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/sls-starter-ts"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@sentry/cli": "^1.71.0",
    "@types/aws-lambda": "^8.10.85",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "codecov": "^3.8.3",
    "copy-webpack-plugin": "^9.1.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.0",
    "serverless": "^2.66.1",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-webpack": "^5.5.5",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "webpack": "^5.64.1",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@sentry/node": "^6.15.0",
    "aws-sdk": "^2.1053.0",
    "axios": "^0.24.0"
  }
}
