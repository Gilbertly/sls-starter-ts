{
  "name": "starter-ts",
  "version": "1.0.0",
  "description": "Essential aws-typescript sample project.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:test": "npm run lint:fix && jest",
    "layer:extensions": "cd ./src/ssm-cache && chmod +x ./build.sh && ./build.sh",
    "clean:build": "rimraf -f build && npm run build && npm run layer:extensions",
    "validate:sls": "sls deploy --stage dev --noDeploy",
    "validate:all": "npm run lint:test && npm run clean:build",
    "deploy:feat": "npm run validate:all && sls deploy",
    "deploy:dev": "npm run validate:all && sls deploy --stage dev",
    "deploy:prod": "npm run validate:all && sls deploy --stage prod",
    "remove:feat": "sls remove"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/sls-starter-ts"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@sentry/cli": "^1.68.0",
    "@types/aws-lambda": "^8.10.82",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "codecov": "^3.8.3",
    "copy-webpack-plugin": "^9.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.4",
    "serverless": "^2.54.0",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-webpack": "^5.5.1",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "ts-node": "^10.2.0",
    "typescript": "^4.3.5",
    "webpack": "^5.50.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@sentry/node": "^6.11.0",
    "aws-sdk": "^2.996.0",
    "axios": "^0.21.1"
  }
}
