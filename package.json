{
  "name": "aws-typescript",
  "version": "1.0.0",
  "description": "Essential aws-typescript sample project.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:test": "npm run lint:fix && jest",
    "prepare:layer": "rimraf -f ./nodejs dependencies.zip && mkdir -p ./nodejs && cp -r ./node_modules ./nodejs",
    "zip:layer": "npm run prepare:layer && zip -qr dependencies.zip nodejs && rimraf -f ./nodejs",
    "clean:build": "rimraf -f build && npm run build",
    "validate:sls": "sls deploy --stage dev --noDeploy",
    "validate:all": "npm run validate:sls && npm run lint:test && npm audit fix && npm run clean:build",
    "deploy:dev": "npm run zip:layer && sls deploy --stage dev",
    "deploy:prod": "npm run zip:layer && sls deploy --stage prod",
    "ddb:install": "sls dynamodb install",
    "ddb:start": "sls dynamodb start --migrate",
    "api:start": "sls offline start --noAuth",
    "cli:cmd": "ts-node ./src/utils/cli.entrypoint.ts --"
  },
  "repository": {
    "type": "git",
    "url": "git@personal:gilbertly/sls-starter-ts"
  },
  "author": "Gilbert Gathara",
  "license": "MIT",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "eslintIgnore": [
    "build/*",
    "node_modules/*"
  ],
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "jest": {
    "roots": [
      "./src"
    ],
    "collectCoverage": true,
    "coverageDirectory": "data/",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix",
      "pre-push": "npm run validate:all"
    }
  },
  "devDependencies": {
    "@sentry/cli": "^1.47.2",
    "@types/aws-lambda": "^8.10.33",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@types/shelljs": "^0.8.5",
    "@types/webpack": "^4.39.2",
    "@types/yargs": "^13.0.3",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "dotenv": "^8.1.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "newman": "^4.5.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.24",
    "serverless": "^1.53.0",
    "serverless-dynamodb-local": "^0.2.38",
    "serverless-offline": "^5.12.0",
    "serverless-webpack": "^5.3.1",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-node-externals": "^1.7.2",
    "yargs": "^14.2.0"
  },
  "dependencies": {
    "@sentry/node": "^5.6.2",
    "aws-sdk": "^2.544.0"
  }
}
